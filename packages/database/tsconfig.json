{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/generated": ["./prisma/generated"]
    }
  },
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "prisma/config.ts",
    "prisma/generated/client.ts"
  ]
}
