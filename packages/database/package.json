{
  "name": "@core/database",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./client": {
      "types": "./dist/prisma/generated/client.d.ts",
      "import": "./dist/prisma/generated/client.js",
      "default": "./dist/prisma/generated/client.js"
    }
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "db:studio": "dotenv -e ../../.env -- prisma studio",
    "build": "tsc",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "pg": "^8.16.3",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "tsx --env-file=../../.env prisma/seed.ts"
  }
}
