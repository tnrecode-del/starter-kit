{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@core/shared": ["packages/shared/src/index.ts"],
      "@core/shared/*": ["packages/shared/src/*"],
      "@core/trpc": ["./packages/trpc/src/index.ts"]
    }
  }
}
